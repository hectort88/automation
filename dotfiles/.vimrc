set number
set autoindent
inoremap " ""<left>
inoremap ' ''<left>
inoremap ( ()<left>
inoremap [ []<left>
inoremap { {}<left>
inoremap {<CR> {<CR>}<ESC>O
inoremap {;<CR> {<CR>};<ESC>O
set encoding=utf-8
set fileencoding=utf-8
set ai ts=4 expandtab
set tabstop=4
set mouse=r
set syuntax=on
set shiftwidth=4
